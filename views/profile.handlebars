<div class="row mt-4">
  <div class="col-md-6">

    <container class="profile-display">
      <div class="profile-left">
    <h3 class="profile-headers">Create a New Project:</h3>

    <form
      class="form new-project-form"
      id="new-project-form"
      action="/api/posts"
    >
      <div class="form-group">
        <label for="project-title">Title:</label>
        <input
          class="form-input"
          type="text"
          id="project-title"
          name="project-title"
        />
      </div>

      <div class="form-group">
        <label for="project-location">Location:</label>
        <input
          class="form-input"
          type="text"
          id="project-location"
          name="project-location"
        />
      </div>

      <div class="form-group">
        <label for="project-date">Date:</label>
        <input
          class="form-input"
          type="date"
          id="project-date"
          name="project-date"
        />
      </div>

      <div class="form-group">
        <label for="project-category">Category:</label>
        <input
          class="form-input"
          type="text"
          id="project-category"
          name="project-category"
          placeholder="education, healthcare, etc."
        />
        {{!-- <label for="project-category">Category:</label>
        <select id="category" name="category">
            <option value="healthcare">Healthcare</option>
            <option value="education">Education</option>
            <option value="environment">Environment</option>
            <option value="humanitarian">Humanitarian</option>
            <option value="elderly">Elder Care</option>
            <option value="animals">Animals</option>
            
        </select><br> --}}
      </div>

      <div class="form-group">
        <label for="project-contact-info">Contact info:</label>
        <input
          class="form-input"
          type="text"
          id="project-contact-info"
          name="project-contact-info"
          placeholder="phone number or email"
        />
      </div>

      <div class="form-group">
        <label for="project-desc">Description:</label>
        <textarea
          class="form-input"
          id="project-description"
          name="project-description"
          placeholder="Tell us about your project"
        ></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit">Create</button>
      </div>
    </form>
    </div>
    <div class="profile-right">
    {{#if posts.length}}
      <div class="col-md-6 post-list">
        <h3 class="profile-headers">Current Projects:</h3>

        {{#each posts as |post|}}
          <div class="row mb-2">
            <div class="col-md-8">
              <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
              <p>{{post.description}}</p>
            </div>
            <div class="col-md-4">
              <button
                class="btn btn-sm btn-danger"
                data-id="{{post.id}}"
              >DELETE</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
    </div>
    </container>
  </div>
</div>

<script src="/javascript/profile.js"></script>